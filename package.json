{
  "name": "client-web-storage",
  "description": "Web browser (client) storage interface for IndexedDB, WebSQL, LocalStorage, and in memory data with Schema validation.",
  "version": "1.5.1",
  "main": "dist/",
  "repository": {
    "url": "https://github.com/beforesemicolon/client-web-storage",
    "type": "git"
  },
  "keywords": [
    "web-storage",
    "client-db",
    "client-storage",
    "indexed-db",
    "web-sql",
    "local-storage",
    "in-memory-storage"
  ],
  "author": "Elson Correia",
  "license": "MIT",
  "scripts": {
    "build:client": "esbuild src/client.ts --bundle --minify --keep-names --sourcemap --target=es2020 --outfile=dist/client-web-storage.min.js",
    "build:client-local": "esbuild src/client.ts --bundle --target=es2020 --outfile=dist/client-web-storage.min.js",
    "build": "tsc --noEmit && rm -rf dist && npm run build:client && tsc",
    "build:local": "tsc --noEmit && rm -rf dist && npm run build:client-local && tsc",
    "local": "nodemon --watch src -e ts --exec 'npm run build:local && npm pack'",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/jsdom": "^16.2.14",
    "@types/localforage": "0.0.34",
    "esbuild": "^0.14.28",
    "jest": "^27.5.1",
    "jest-canvas-mock": "^2.3.1",
    "jest-environment-jsdom": "^27.5.1",
    "nodemon": "^2.0.15",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "localforage": "^1.10.0"
  }
}
